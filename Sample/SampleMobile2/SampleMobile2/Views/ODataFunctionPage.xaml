<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleMobile2.Views.ODataFunctionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:SampleMobile2.ViewModels;assembly=SampleMobile2"
    Title="Tax Rate (OData)">
    <ContentPage.BindingContext>
        <viewModels:ODataFunctionPageViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="24">
        <Label Text="Postal Code:" />
        <Entry Placeholder="Postal Code Here" Text="{Binding PostalCode}" />
        <Label Text="Result:" />
        <Entry IsEnabled="False" Text="{Binding ResultValue}" />
        <Button Command="{Binding CalculateCommand}" Text="Calculate" />
    </StackLayout>
</ContentPage>